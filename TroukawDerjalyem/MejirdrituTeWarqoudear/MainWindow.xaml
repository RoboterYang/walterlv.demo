<Window x:Class="MejirdrituTeWarqoudear.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="540" Height="360">
    <Canvas Background="Tomato">
        <FrameworkElement.Resources>
            <Style TargetType="Border">
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="VerticalAlignment" Value="Top" />
                <Setter Property="Canvas.Left" Value="30" />
                <Setter Property="Canvas.Top" Value="30" />
            </Style>
        </FrameworkElement.Resources>
        <Border Width="9" Height="9" Margin="1" Background="White" CornerRadius="4.5" />
        <!--<Border Width="3" Height="13" Margin="4 -1 0 0" Background="White" CornerRadius="1.5" />
        <Border Width="13" Height="3" Margin="-1 4 0 0" Background="White" CornerRadius="1.5" />
        <Border Width="1" Height="11" Margin="5 0 0 0" Background="#0184cc" />
        <Border Width="11" Height="1" Margin="0 5 0 0" Background="#0184cc" />-->
        <Border Width="7" Height="7" Margin="2" BorderThickness="1" BorderBrush="#0184cc" Background="White" CornerRadius="3.5">
            <!--<Rectangle Width="3" Height="3" Fill="#0184cc" />-->
        </Border>
    </Canvas>
</Window>