<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:ww="clr-namespace:Walterlv.Windows;assembly=Walterlv.Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        FontSize="48" Foreground="Tomato" FontFamily="Monaco"
        Background="Black">
    <FrameworkElement.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                           <ContentPresenter /> 
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </FrameworkElement.Resources>
    <Grid>
        <ww:AsyncBox LoadingViewType="local:LoadingView">
            <local:LongTimeView />
        </ww:AsyncBox>
        <!--<local:LoadingView HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="16" />-->
    </Grid>
</Window>
