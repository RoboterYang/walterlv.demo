<Window x:Class="Walterlv.WindowShadow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Walterlv.WindowShadow"
        mc:Ignorable="d" Title="MainWindow" Width="1280" Height="720" Icon="icon.ico">
    <WindowChrome.WindowChrome>
        <WindowChrome UseAeroCaptionButtons="True" CornerRadius="0" GlassFrameThickness="0 0 0 1" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Image Stretch="Fill" Source="screenshot-shell.png" />
        <Button Width="87" Height="54" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,30,0,0"
                Opacity="0.0" Click="ButtonBase_Click"/>
        <Button Width="35" Height="28" HorizontalAlignment="Right" VerticalAlignment="Top"
                Opacity="0.0" Click="CloseButton_Click" WindowChrome.IsHitTestVisibleInChrome="True" />
        <TextBlock x:Name="DebugTextBlock" Text="fasdf" FontSize="32" TextWrapping="WrapWithOverflow" Margin="202,171,316,140" />
    </Grid>
</Window>
