<Window x:Class="Walterlv.WindowShadow.CloudWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Walterlv.WindowShadow"
        mc:Ignorable="d" Title="CloudWindow" Width="1000" Height="680" Icon="cloud.ico">
    <WindowChrome.WindowChrome>
        <WindowChrome UseAeroCaptionButtons="True" CornerRadius="0" GlassFrameThickness="0 0 0 1" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Image Stretch="Fill" Source="screenshot-cloud.png" />
        <Button Width="35" Height="28" HorizontalAlignment="Right" VerticalAlignment="Top"
                Opacity="0.0" Click="CloseButton_Click" WindowChrome.IsHitTestVisibleInChrome="True" />
    </Grid>
</Window>
