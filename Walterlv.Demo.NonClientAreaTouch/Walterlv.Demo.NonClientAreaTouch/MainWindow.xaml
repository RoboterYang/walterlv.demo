<Window x:Class="Walterlv.Demo.NonClientAreaTouch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Walterlv.Demo.NonClientAreaTouch"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="100" />
    </WindowChrome.WindowChrome>
    <Grid Background="Teal">
        <Border Height="100" VerticalAlignment="Top" Background="BlueViolet"
                TouchDown="Border_TouchDown" MouseDown="Border_MouseDown" />
    </Grid>
</Window>
